*/
$.fn.animateHighlight = function (highlightColor) {
	 var highlightBg = highlightColor || "#5CB85C";
	 var animateMs = 1000;
	 var originalBg = this.css("background-color");

	 if (!originalBg || originalBg == highlightBg)
		originalBg = "#FFFFFF"; // default to white

	 jQuery(this)
		.css("backgroundColor", highlightBg)
		.animate({ backgroundColor: originalBg }, animateMs, "linear", function () {
			jQuery(this).css("backgroundColor", originalBg);
		});
 };

$('.current_item').animateHighlight();